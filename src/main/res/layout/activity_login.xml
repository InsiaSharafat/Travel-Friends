<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".LoginActivity">

    <Button
        android:id="@+id/btn_phone_login"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="CONTINUE WITH GOOGLE"
        android:drawableLeft="@drawable/google"
        android:padding="8dp"
        android:drawableTint="@color/colorPrimaryDark"
        android:background="@drawable/layout_button_login"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.931"
        android:textColor="@color/colorPrimaryDark"/>

    <Button
        android:id="@+id/button3"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="568dp"
        android:background="@drawable/layout_button_login"
        android:drawableLeft="@drawable/phone"
        android:drawableTint="@color/colorPrimaryDark"
        android:onClick="phoneLoginClick"
        android:padding="8dp"
        android:text="CONTINUE WITH PHONE"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintBottom_toTopOf="@+id/btn_phone_login"
        app:layout_constraintEnd_toEndOf="@+id/btn_phone_login"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btn_phone_login"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>